<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <strong>mails</strong>
    <ul>
    <% @grmail.each do |mail| %>
      <li>
        <label>
          <% checked = mail.groups.exists?(@group.id) ? true : false %>
          <%= f.check_box 'grmail_ids', { :name => 'group[grmail_ids][]', :checked => checked }, mail.id, nil %>
          <%= mail.email %>
        </label>
      </li>
    <% end %>
    </ul>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
