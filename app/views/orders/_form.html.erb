      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :contract_number %><br>
    <%= f.number_field :contract_number %>
  </div>
  <div class="field">
    <%= f.label :customer_id %><br>
    <%= f.number_field :customer_id %>
  </div>
  <div class="field">
    <%= f.label :request_destination %><br>
    <%= f.text_area :request_destination %>
  </div>
<% if @order.new_record? %>
<% else %>
  <div class="field">
    <%= f.label :delivery_date %><br>
    <%= f.date_select :delivery_date, :include_blank => true, :start_year => Date.today.year %>
  </div>
<% end %>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_area :status %>
  </div>
  <div class="field">
    <%= f.label :web_url %><br>
    <%= f.text_area :web_url %>
  </div>
<% if false %>
  <div class="field">
  	<%= f.label :user_id %><br>
  	<%= f.number_field :user_id %>
  </div>
<% end %>
	<div>
	  <%= f.check_box 'user_ids', {:name => 'order[users_ids][]', :checked => true }, @user.id, nil %>
	  <%= @user.username %>
	</div>
  <div class="actions">
    <%= f.submit %>
  </div>
