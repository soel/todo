<p id="notice"><%= notice %></p>

<p>
  <strong>契約番号:</strong>
  <%= @order.contract_number %>
</p>

<p>
  <strong>顧客番号:</strong>
  <%= @order.customer_id %>
</p>

<p>
  <strong>依頼先:</strong>
  <% @order.groups.each do |group| %>
  <%= group.name %>
  <% end %>
</p>

<p>
	<strong>添付ファイル:</strong><br>
	<% @order_attachments.each do |o| %>
	<% if o.document_url.present? %>
	<%= File.basename o.document_url %>
	<%= link_to "edit file", edit_order_attachment_path(o)%><br>
	<% end %>
	<% end %>
</p>

<p>
  <strong>予定納期:</strong>
  <%= @order.delivery_date %>
</p>

<p>
  <strong>ステータス:</strong>
  <%= @order.status %>
</p>

<p>
  <strong>作成日:</strong>
  <%= @order.created_at %>
</p>

<p>
  <strong>Web url:</strong>
  <%= @order.web_url %>
</p>

<p>
  <strong>作成者</strong>
  <%= @order.users.first.username %>
</p>

<h2>コメント</h2>
<% @order.comments.each do |comment| %>

<p>
	<strong>コメンター</strong>
	<%= User.find(comment.user_id).username %>

</p>
<p>
	<strong>コメント:</strong>
	<%= simple_format comment.body %>
</p>
<% end %>

<h2>コメントを追加</h2>
<%= form_for( [@order, @order.comments.build] ) do |f| %>
<p>
	<%= @user.username %><br />
	<%= f.hidden_field :user_id, :value => @user.id %>
	<%= f.label :bosy, "コメント"%><br />
	<%= f.text_area :body, cols: 60, rows: 8 %>
</p>

 <p>
    <%= f.submit %>
</p>

<% end %>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
